/*******************************************************/
/********************** GENERAL ************************/
/*******************************************************/

$white = #ffffff
$black = #000000
$turquoise = #70bd95
$yellow = #fed061
$red = #FF453E

$regular_font = "Gotham A", "Gotham B", sans-serif
$condensed_font = "Gotham Cond A", "Gotham Cond B", sans-serif

$activeTipHeight = 1380px

body {
	font-family: $regular_font
	
	p {
		margin: 0;
	}
	
	a{
		text-decoration: none;
		color: inherit;
	}
	
}



h1,h2,h3,h4{
	font-family: $condensed_font
	text-transform: uppercase;
	letter-spacing: 1px;
	font-weight: 500;
}

h1,h2{
	max-width: 80%;
	padding: 0 10%;
}

h2 {
	font-size 2em;
}


/*******************************************************/
/*********************** HEADER ************************/
/*******************************************************/


.intro {
	background: black;
	height: 100vh;
	min-height: 500px;
	position: relative;
	.intro-content {		
		color: $turquoise;
		display:

		.top-logo-wrapper{
			background: $turquoise;
			padding: 3vh 0;
			.top-logo {
				background: url('/images/sff_logo_black.svg') no-repeat center center;
				height: 14vh;
				width: 100%;
				display: block;
			}
		}
		
		.mid-content{
			
			width: 80%;
			max-width: 420px;
			margin: 0 auto;
			position: relative;
			height: 70vh;
			min-height: 400px;	
		
			.mid-logo {
				background: url('/images/logo2.svg') no-repeat 50% 30%;
				width: 100%;
				position: absolute;
				top: 0;
				bottom: 0;
			}
			
			.intro-text-bottom {
				font-family: $condensed_font;
				font-weight: 300;
				font-style: normal;
				font-size: 2.2em;
				padding: 1em 0;
				position: absolute;
				top: 60%;
			}
		}
	}
	.call-to-action{
		bottom 0;
		position: absolute;
		padding: 4vh 10%;
	}
	
}


/*******************************************************/
/*********************** WELCOME ***********************/
/*******************************************************/

.welcome {
	background: white;
	color: black;
}

.text-block {
	padding: 10%;
	font-family: $condensed_font;
	font-weight: 300;
		p {
			padding-bottom: 1em;
			font-size: 1.4em;
			line-height: 1.4em;
			max-width: 600px;
			margin: 0 auto;
		}
}



/*******************************************************/
/********************* MOVIES***************************/
/*******************************************************/
.movies{
	background: $black;
	padding: 32px 0 0;
	overflow: hidden;
}

.tips-text {
		color: $white;
		padding: 20px;
		font-size: 30pt;
		font-family: $condensed_font;
}


.tips {
	padding: 0;
	margin: 0;
	list-style: none;
	background: black;
	.tip {
		padding: 0;
		margin: 0 0 2em;
		box-sizing: border-box;
		
		&.active {

			.content {
				max-height: 2000px;
				overflow: visible;
				padding-top: 50px;
				padding-bottom: 2em;
			}
			
		}
		
		.teaser {
			display: block;
			position: relative;
			width: 100%;
			margin-left: 0;
			padding: 40% 0 20% 0;
			background-position: center left;
			background-size: cover;
			background-repeat: no-repeat;
			font-family: $condensed_font;
			font-weight: 500;
			text-decoration: none;
			color: black;
			text-transform: uppercase;
			
			.number-box, .text-box-title{
				float: left;
				display: block;
				height: 35px;
			}
			
			.number-box {
				margin: 0 7px 0 0;
				text-align: center;
				font-size: 20pt;
				background: $yellow;
				width: 35px;
			}
			
			.text-box-title {
				font-size: 20pt;
				background: $turquoise;
				color: black;
				padding-right: 10px;
				line-height: 35px;
				text-transform: uppercase;
				min-width: 90px;
			}

			.text-box-title:before {
				content: '';
				float: left;
				margin: 7px 5px 5px 13px;
				border-top: 10px solid transparent;
				border-left: 14px solid black;
				border-bottom: 10px solid transparent;
			}
		}
		
		.content {
			width: 100%;
			overflow: hidden;
			max-height: 0;
			background: $turquoise;
			position: relative;
			transition: max-height .6s ease-out;
			&:before{
					content: '';
					position: absolute;
					width: 100%;
					height: 50px;
					background: black
					top: 0;
			}
			.back-btn{
				position: absolute;
				font-family: $condensed_font;
				color: $turquoise;
				top: 7px;
				right: 7px;
				height: 32px;
				text-transform: uppercase;
				text-decoration: none;
				font-size: 16pt;
				font-weight: 500;
				padding-right: 1px;
				line-height: 32px;
				cursor: pointer;
				overflow: hidden;
				display: block;
				&:before{
					content ''
					background: url('/images/close_green.svg') center center no-repeat;
					float: left;
					margin-right: 7px;
					width: 22px;
					height: 32px;
					display: block;
				}
				&:hover{
					color: $turquoise;
					&:before{
						background-image: url('/images/close_green.svg')
					}
				}
				
			}

			.video {
				width: 100%;
				min-height: 220px;
				min-height: 640px;
				min-height: 56vw;
				background: black;
			}
			>h2{
				text-align: center;
				color: white;
			}
			
			.movie-tips {
				color: white;
				.related-movies{
					
					text-align: center;
					
					
					.movie{
						
						display: inline-block;
						max-width: 380px;
						margin: 0 10% 2.3em;
						overflow: hidden;
						position: relative;
						vertical-align: top;
						
						.poster {
							width: 100%;
							height: 140px;
							background-size: cover;
    						background-position: center center;
						}
						.movie-info{
							width: 100%;
							position: relative;
							text-align: left;
							padding .6em 0 0;
							.movie-excerpt {
								font-size: 10pt;
								min-height: 48px;
							}
							
							h3{
								padding: 0 0 4px;
								margin: 0;
								max-width: 100%;
								width: 100%;
								font-size: 1.5em;
								border-bottom: 1px solid white;
							}
							
							h4{
								font-size: 1.1em;
								margin: 0;
								padding: 6px 0 .6em;
								font-weight: 300;
							}
							
							.showing{
								font-family: $condensed_font;
								overflow: hidden;
								position: relative;
								padding: 0 0 0 33%;
								margin-top: 1em;
								h4{
									padding: 0;
									font-size: 90%;
								}
								p{
									font-weight: 500;
									font-size: 1.5em;
									margin: 0;
									padding: 0;
								}
								.buy-btn{
									font-family: $condensed_font;
									font-weight: 300;
									position: absolute;
									top: 0;
									bottom: 0;
									left: 0;
									background: white;
									text-align: center;
									width: 30%;
									text-decoration: none;
									color: $turquoise;
									display: block;
									text-transform: uppercase;
									border: 1px solid white;
									line-height: 46px;
									overflow: hidden;
									z-index: 0;
									&:before{
										content: '';
										width: 140px;
										height: 280px;
										display: block;
										background: $turquoise;
										position: absolute;
										top: -350%;
										left: -180%;
										transform: rotate(45deg);
										z-index: -1;
										transition: left .3s ease-out;
									}
									&:after{
										content: '';
										position: absolute;
										top: 0;
										bottom: 0;
										right: 0;
										left: 0;
										background: white;
										z-index: -2;
									}
									&:hover{
										color: white;
										background: $turquoise;
										&:before{
											left: -28%;
										}
									}
								}
							}
						
						}
					

					}
				}
			}
			.tip-info{
				width: 100%;
				display: block;
				background: white;
				padding: .7em 0;
				margin-top: -4px;
				text-align: center;
				color: black;
				.share-tip {
					
					display: inline-block;
					max-width: 600px;
					overflow: hidden;
					width: auto;

					h3 {
						font-size: 16pt;
						text-transform: uppercase;
						float:left;
						padding: 0;
						line-height: 50px;
						margin: 0 5px 0 0;
					}
					
					input {
						float: left;
						margin-left: 10px;
						border-radius: 2px;
						height: 32px;
						color: black;
						width: 51%;
						font-size: .9em;
						padding: 4px 7px;
						margin: 5px;
						border: 1px solid black
					}
					
					.socialmedia-icons {
						float: left;
						overflow: hidden;
						a {
							width: 44px;
							height: 44px;
							margin: 3px 5px;
							background-position: center center;
							background-repeat: no-repeat;
							display: block;
							float: left;
							transition: opacity 0.1s linear;
							opacity: 1;
							&.facebook{
								background-image: url('/images/socialmedia/facebook.svg');
							}
							&.twitter{
								background-image: url('/images/socialmedia/twitter.svg');
							}
							&.mail{
								background-image: url('/images/socialmedia/mail.svg');
							}
							&:hover{
								opacity: 1;
							}
						}
						
					}
					
					.next-tip{
						font-family: $condensed_font;
						position: absolute;
						right: 0;
						display: none;
						a{
							color: black;
							text-decoration: none;
						}
					}
				}
			}
		}
	}
	
}


.hidden {
	display: none;
}




/*******************************************************/
/********************* COMPONENTS **********************/
/*******************************************************/

.dates {
	background: $yellow;
	width: 100%;
}



.call-to-action {
	display: block;
	color: $turquoise;
	padding: 2em 10%;
	width: 80%;
	font-family: $condensed_font;
	text-transform: uppercase;
	font-size: 18pt;
	text-decoration: none;
	font-weight: 500;
	letter-spacing: 0.03em;
	cursor: pointer;
	text-align: center;
	p {
		margin: 0;
		position: relative;
		display: inline-block;
		padding-right: 40px;
		&:after {
			content: '';
			background: url('/images/arrow_green.svg') no-repeat center center;
			background-size: 20px
			width: 32px;
			height: 29px;
			top: 0;
			right: 0;
			display: block;
			position: absolute;
		}
	}
	
	&.neg{
		p:after{
			background-image: url('/images/arrow.svg');
		}
		background-color: $turquoise;
		color: white;
	}
}


/*******************************************************/
/********************** INSTAGRAM **********************/
/*******************************************************/

.instagram-feed {
	background: $black;
	width: 100%;
	font-family: $condensed_font;
	color: $turquoise;
	position: relative;
	
	.top-content {
		width: 100%;
		padding: .5em 0 0 0;
		
		.hashtag-box{
			padding: 0 10%;
			.hashtag-info{
					display: inline-block;
					width: auto;
					border-bottom: 4px solid transparent;
					padding: 0;
					max-width: 100%;
					&:hover{
						border-color: $turquoise;
					}
			}
		}
		
		.instagram-box {	
			.all-images {
				#instafeed {
					
					a {
						float: left;
					}
				}
		
				.more-images {
					color: $turquoise;
					background: black;
					float: left;
					font-size: 1.3em;
					margin: 0;
					text-align: center;
					text-transform: uppercase;
					text-decoration: none;

					span:before {
						content: '';
						display: inline-block;
						height: 100%;
						vertical-align: middle;
					}
					
					&:after {
						clear: both;
						content: '';
						display: table;
					}
				}
				
				&:after {
					clear: both;
					content: '';
					display: table;
				}
			}
		}
	}
}

/*******************************************************/
/************************ DATES ************************/
/*******************************************************/
.dates {
	background: $turquoise;
	font-family: $condensed_font;
	font-size: 1.8em;
	width: 100%;
	
	.dates-content {
		margin: 0 auto;
		padding: 10%;
		
		a {
			border-bottom: solid white 4px;
			color: $white;
			line-height: 50px;
			text-decoration: none;
		}
		
		p {
			color: $white;
			margin: 1em auto;
			text-transform: uppercase;
			line-height: 35px;
		}
	}
}


/*******************************************************/
/*********************** FOOTER ************************/
/*******************************************************/

.footer-content {
	background: black;
	font-family: $condensed_font;
	font-weight: 300;
	padding: 10% 5%;
	text-align: center;
	
	h2 {
		margin: 0 0 .3em;
		padding-top: 2em;
		color: $turquoise;
		font-size: 1.8em;
	}
	
	p {
		color: $turquoise;
		font-size: 1.5em;
		text-transform: uppercase;
		&.bigger{
			font-size: 2.2em;
		}
	}
	
	.footer-logos{
		padding: .5em 0 2em;
		display: block;
		a{
			display: block;
			margin: 1em auto;
			height: 50px;
			max-width: 140px;
			width: 60%;
		}
	}
	
	.logo-smicker {
		background: url('/images/smicker_logo.svg') no-repeat center center;
	}
	
	.logo-vinnovera {
		background: url('/images/vinnovera_logo.svg') no-repeat center center;
	}
}
