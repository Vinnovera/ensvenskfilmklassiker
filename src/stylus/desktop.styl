/*******************************************************/
/************************ MENU *************************/
/*******************************************************/

.main-menu {
	z-index: 2;
	width: 100%;
	background: $black;
	height: 50px;
	
	ul {
		text-align: center;
		margin: 0;
		color: $white;

		li {
			display: inline-block;
			padding-left: 0px;
			margin-left: 1%;
			margin-right: 1%;
			
			a {
				font-family: $condensed_font;
				letter-spacing: 1px;
				font-size: 18pt;
				text-transform: uppercase;
				color: $white;
				text-decoration: none;
				padding: 10px;
				float: left;
			}
		}
	}
}
