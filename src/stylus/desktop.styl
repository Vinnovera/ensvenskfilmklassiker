/*******************************************************/
/************************ MENU *************************/
/*******************************************************/

.main-menu {
	z-index: 2;
	width: 100%;
	position: fixed;
	background: $black;
	height: 50px;
	
	ul {
		text-align: center;
		margin: 0;
		color: $white;

		li {
			display: inline-block;
			padding-left: 0px;
			margin-left: 1%;
			margin-right: 1%;
			
			a {
				font-family: "Knockout 48 A", "Knockout 48 B";
				letter-spacing: 1px;
				font-size: 18pt;
				text-transform: uppercase;
				color: $white;
				text-decoration: none;
				padding: 10px;
				float: left;
			}
		}
	}
}

/*******************************************************/
/*********************** HEADER ************************/
/*******************************************************/

.intro {
	background: url("../images/intro-background.jpg") no-repeat 100% 37%;
	background-size: cover;

	padding-top: 1em;
	padding-bottom: 4em;
	
	.intro-content {
		width: 100%;


		.top-logo {
			width: 120px;
			padding-top: 5%;
			display: block;
			margin-left: auto;
			margin-right: auto;
		}
		
		.mid-logo {
			width: 40%;
			padding: 2%;
			display: block;
			margin-left: auto;
			margin-right: auto;
			left: 0;
			right: 0;
		}
		
		.intro-text {
			padding: 12% 11% 0% 11%;
			font-size: 24pt;
			text-align: center;
			width: 70%;
			margin-left: auto;
			margin-right: auto;
			color: $yellow;
			font-style:italic;
			font-weight: bold;
		}
	
		.intro-text-bottom {
			padding: 2%;
			text-align: center;
			width: 70%;
			margin-left: auto;
			margin-right: auto;
			color: $yellow;
			font-style:italic;
			font-weight: bold;
			font-size: 24pt;
			
		}
	
		button {
			display: block;
	    	width: 250px;
			height: 75px;
			margin-left: auto;
			margin-right: auto;
			background: $red;
			border: none;
			text-align: center;
		
			a {
				font-family: "Knockout 48 A", "Knockout 48 B";
				text-transform: uppercase;
				font-size: 18pt;
				color: $black;
				text-decoration: none;
			}
		}
	}
}

/*******************************************************/
/*********************** WELCOME ***********************/
/*******************************************************/

.welcome {
	background: $turquoise;
	padding-bottom: 4em;
	padding-top: 4em;
	
	
	.top-content {
		text-transform: uppercase;
		background: $red;
		font-size: 10pt;
		font-weight: bold;
	}
	
	.ready-text {
		display: none;
	}

	.welcome-content {
		margin: 0 auto;
		width: 42%;
		color: $black;
		
		h2 {
			display: none;
		}
		
		p {
			padding: 0;
		}
		
		.intro-text {
			padding-bottom: 1em;
			font-size: 20pt;
			font-weight: bold;
			line-height: 40px;
		}
		
		.info-text {
			padding-top: 0.5em;
			font-size: 14pt;
		}
		
		.end-text {
			padding-top: 2em;
			padding-bottom: 4em;
			font-size: 14pt;
		}
		
		.arrow-down {
			width: 200px;
			height: 250px;
			display: block;
			margin-left: auto;
			margin-right: auto;
			margin-bottom: 2em;
		}
		
		.arrowdown-text {
			margin-right: auto;
			margin-left: auto;
			text-align: center;
			font-size: 20pt;
			font-weight: bold;
			line-height: 40px;
			width: 60%;
		}
	}
}

/*******************************************************/
/************************* TIP ************************/
/*******************************************************/

.tip {
	background: $yellow;
	
	.tips-text {
		display: none;
	}
	
	.tip-teaser {
		background: url("../images/stills/anders_gladjen_raw_still_v1.jpg") no-repeat center;
		background-size: cover;
		display: inline-block;
		height: 400px;
		width: calc(100% / 3);
		color: $white;
		overflow: hidden;
		margin-bottom: -.2em;
		margin-right: -.2em;
		
		&.thumbs {
			height: 200px;
    		width: calc(60% / 3);
    		    		
    		.number-box {
				font-size: 17pt;
				width: 30px;
				height: 30px;
				margin-top: 1px;
    		}
    		
    		.text-box {
				top: 25%;
				left: 25%;
				width: 100%;
				height: 50px;
			
				.play {
				    border-top: 15px solid transparent;
				    border-left: 25px solid $white;
				    border-bottom: 15px solid transparent;
				}
				
				.tips-box-text {
					font-size: 15pt;
					margin-left: 20px;
					margin-top: 3px;
				}	
			}
		}

		&:nth-of-type(2) {
			background: url("../images/stills/marianne_graten_raw_still_v1.jpg") no-repeat center;
			background-size: cover;
		}
		
		&:nth-of-type(3) {
			background: url("../images/stills/derrick_skracken_raw_still_v1.jpg ") no-repeat center;
			background-size: cover;
		}
		
		&:nth-of-type(4) {
			background: url("../images/stills/marianne_ilskan_raw_still_v1.jpg") no-repeat center;
			background-size: cover;
		}
		
		&:nth-of-type(5) {
			background: url("../images/stills/micke_stressen_raw_still_v1.jpg") no-repeat center;
			background-size: cover;
		}
		
		&:nth-of-type(6) {
			background: url("../images/stills/anders_gladjen_raw_still_v1.jpg") no-repeat center;
			background-size: cover;
		}
		
		&:hover {
			background: $red;
			
			.text-box {
				display: block;
				text-transform: uppercase;
			}
		}
		
		.number-box {
			position: relative;
			top: 0%;
			text-align: center;
			font-size: 27pt;
			font-family: "Verlag A", "Verlag B";
			background: $red;
			width: 50px;
			height: 50px;
		}
		
		.text-box {
			display: none;
			position: relative;
			text-align: center;
			top: 25%;
			left: 25%;
			width: 100%;
			height: 50px;
			
			.play {
				background: $red;
				float: left;
			    border-top: 25px solid transparent;
			    border-left: 35px solid $white;
			    border-bottom: 25px solid transparent;
			}
			
			.tips-box-text {
				float: left;
				font-size: 20pt;
				text-align: center;
				margin-left: 25px;
				margin-top: 10px;
			}	
		}
	}
	
	.tip-content {
		background: $black;
		display: none;
		
		&.open{
			display inline-block
			position: relative;
			margin-top: -200px;
    		z-index: 0;
		}
		
		.youtube-content {
			text-align: center;
			background: $white;
			height: 50vh;
		}
		
		.tip1-content {
			float: left;
			width: 50%;
			padding: 1em;
			color: $white;
			
			.tip-howto {

			}
			
			.movie-tips {
				padding-bottom: 2em;

				h2 {
					font-size: 12pt;
					text-transform: uppercase;
					border-bottom 2px solid $black;
					line-height: 40px;
				}
				
				.movie-posters {
					outline: 1px solid $white;
					height: 180px;
				}
			}
		}
		
		.share-tip {
			float: right;
			padding-top: 2em;
			
			h2 {
				color: $white;
				font-size: 12pt;
				text-transform: uppercase;
			}
			
			input {
				border: none;
				border-radius: 2px;
				height: 28px;
				width: 140px;
			}
			
			input::-webkit-input-placeholder { /* WebKit browsers */
					padding-left: 0.5em;
			}
			
			.socialmedia-icons {
				float: right;
				margin-top: -5px;
				
				img {
					width: 35px;
					height: 35px;
					padding: 3px 5px 3px 3px;
				}
			}
		}
		
		.next-tip {
			text-transform: uppercase;
			font-weight: bold;
			color: $white;
			margin-top: 250px;
			border-bottom: 2px solid $red;
    		width: 170px;
    		
    		a {
    			text-decoration: none;
    		}
			
			.next-tip-text {
				color: $white;
				margin-bottom: 10px;
			}
			
			.play {
				background: $black;
				float: left;
			    border-top: 15px solid transparent;
			    border-left: 25px solid $red;
			    border-bottom: 15px solid transparent;
			}
			
			.next-tip-teaser {
				color: $red;
				margin-top: -10px;
			    margin-left: 30px;
			    font-size: 30pt;
			}
		}
	}
}

/*******************************************************/
/********************** INSTAGRAM **********************/
/*******************************************************/

.instagram-feed {
	background: $black;
	width: 100%;
	
	.top-content {
		width: 100%;
		
		.about-info {
			display: inline-block;
			width: 20%;
			
			.about-text {
			color: $white;
			padding: 5%;
			font-size: 1.8em;
			}
		}
		
		.hashtag-box {
			display: block;
    		text-align: center;
			
			.hashtag-info {
				font-size: 1.4em;
				font-weight: bold;
				width: 100%;
				text-transform: uppercase;
				padding-top: 1em;
				padding-bottom: 1em;
				color: $red;
			}
		}
		
		.instagram-box {
			display: inline-block;
			width: 70%;
			
			#instafeed {

				a {
					float: left;
					img {

					}
				
					&:after {
						clear: both;
						content: '';
						display: table;
					}
				}
			}
	
			.more-images {
				color: white;
				background: black;
				float: left;
				height: 150px;
				line-height: 150px;
				margin: 0;
				text-align: center;
				text-decoration: none;
				vertical-align: middle;
				width: 150px;
			}
