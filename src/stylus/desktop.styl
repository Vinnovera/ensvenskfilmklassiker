/*******************************************************/
/************************ MENU *************************/
/*******************************************************/

.main-menu {
	z-index: 2;
	width: 100%;
	position: fixed;
	background: $black;
	height: 50px;
	
	ul {
		text-align: center;
		margin: 0;
		color: $white;

		li {
			display: inline-block;
			padding-left: 0px;
			margin-left: 1%;
			margin-right: 1%;
			
			a {
				font-family: $condensed_font;
				letter-spacing: 1px;
				font-size: 18pt;
				text-transform: uppercase;
				color: $white;
				text-decoration: none;
				padding: 10px;
				float: left;
			}
		}
	}
}

/*******************************************************/
/*********************** HEADER ************************/
/*******************************************************/

.intro {
	min-height: 900px;
	.intro-content {
		width: 100%;
		
		.top-logo-wrapper{
			padding-top: 50px;
		}
		
		.intro-text-bottom{
			bottom: 20%;
		}
	}
}


/*******************************************************/
/************************* TIP ************************/
/*******************************************************/

.tips {
	background: $yellow;
	padding 0;
	
	.tips-text {
		display: none;
	}
	
	.tip-teaser{
		display: block;
		float:left;
		width: calc(100% / 3);
		height: 50vh;
		max-height: 410px;
		overflow: hidden;
		
		&.thumbs {
					height: 200px;
		    		width: calc(60% / 3);
		    		
		    .number-box {
				font-size: 17pt;
				width: 30px;
				height: 30px;
		    }
		}

		.tip-teaser-content {
			margin: 0;
			width: 100%;
			height: 100%;
			text-align: center;
			&:hover {
				background-image: none!important;
				background-color: $yellow;
				
				.text-box {
					display: inline-block;
				}
			}
			
			.number-box {
				position: absolute;
				top: 0;
				left: 0;
				text-align: center;
				font-size: 27pt;
				background: $yellow;
				width: 50px;
				height: 50px;
				margin: 0;
			}
			
			.text-box {
				display: none;
				position: relative;
				height: 50px;
				font-size: 32pt;
				line-height: 50px;
				background: none;
				float: none;
				clear: both;
				top: 42%;
				
				.play {
					margin: 5px 5px 5px 13px;
					float: left;
				    border-top: 20px solid transparent;
				    border-left: 30px solid black;
				    border-bottom: 20px solid transparent;
				}
				
			}
			

		}
		
	}
	.tip-content {
			background: $black;
			display: none;
			
			&.open{
				display inline-block
				position: relative;
				margin-top: -200px;
	    		z-index: 0;
			}
			
			.youtube-content {
				text-align: center;
				background: $white;
				height: 50vh;
			}
			
			.tip1-content {
				float: left;
				width: 50%;
				padding: 1em;
				color: $white;
				
				.tip-howto {

				}
				
				.movie-tips {
					padding-bottom: 2em;

					h2 {
						font-size: 12pt;
						text-transform: uppercase;
						border-bottom 2px solid $black;
						line-height: 40px;
					}
					
					.movie-posters {
						outline: 1px solid $white;
						height: 180px;
					}
				}
			}
			
			.share-tip {
				float: right;
				padding-top: 2em;
				
				h2 {
					color: $white;
					font-size: 12pt;
					text-transform: uppercase;
				}
				
				input {
					border: none;
					border-radius: 2px;
					height: 28px;
					width: 140px;
				}
				
				input::-webkit-input-placeholder { /* WebKit browsers */
						padding-left: 0.5em;
				}
				
				.socialmedia-icons {
					float: right;
					margin-top: -5px;
					
					img {
						width: 35px;
						height: 35px;
						padding: 3px 5px 3px 3px;
					}
				}
			}
			
			.next-tip {
				text-transform: uppercase;
				font-weight: bold;
				color: $white;
				margin-top: 250px;
				border-bottom: 2px solid $yellow;
	    		width: 170px;
	    		
	    		a {
	    			text-decoration: none;
	    		}
				
				.next-tip-text {
					color: $white;
					margin-bottom: 10px;
				}
				
				.play {
					background: $black;
					float: left;
				    border-top: 15px solid transparent;
				    border-left: 25px solid $yellow;
				    border-bottom: 15px solid transparent;
				}
				
				.next-tip-teaser {
					color: $yellow;
					margin-top: -10px;
				    margin-left: 30px;
				    font-size: 30pt;
				}
			}
		}
}

/*******************************************************/
/********************** INSTAGRAM **********************/
/*******************************************************/

.instagram-feed {	
	.top-content {		
		.about-info {
			display: block;
			padding: 5%;
			
			.about-text {
				margin: 0 auto;
				width: 70%;
			}
		}
		
		.hashtag-box {
			display: block;
			text-align: center;
			
			.hashtag-info {
				width: 100%;
				padding-top: 1em;
				padding-bottom: 1em;
			}
		}
		
		.instagram-box {
			width: 100%;
			
			.all-images {		
				a {
					position: relative;
					float: left;
					width: 12.5%;
					padding-bottom: 12.5%;
					
					img,span {
						position: absolute;
						left: 0;
						top: 0;
						width: 100%;
						height: 100%;
					}
				}
			}
		}
	}
	
	&:after {
		clear: both;
		content: '';
		display: table;
	}
}

/*******************************************************/
/************************ DATES ************************/
/*******************************************************/

.dates-content {
	margin: 0 auto;
	width: 80%;
	
	a {
		text-decoration: none;
		color: $black;
	}
	
	.info-text {
		display: block;
		margin-left: auto;
		margin-right: auto;
		width: 60%;
		font-size: 20pt;
		padding: 10%;
		text-transform: uppercase;
		line-height: 35px;
	}
	
	.link-text {
		display: block;
		margin-left: auto;
		margin-right: auto;
		width: 60%;
		font-size: 20pt;
		padding: 10%;
		text-transform: uppercase;
		line-height: 35px;
	}

}


/*******************************************************/
/********************* COMPONENTS **********************/
/*******************************************************/

.dates {
	background: $yellow;
	width: 100%;
}


/*******************************************************/
/*********************** FOOTER ************************/
/*******************************************************/

.footer-content {

	h2 {
		padding-top: 4em;
	}
	
	.footer-logo{
		float: left;
	}
	
	.logo-smicker {
		width: 15%;
	}
	
	.logo-vinnovera {
		width: 15%;
		&:after{
			clear:both;
			float:none;
		}
	}
}