/*******************************************************/
/************************ MENU *************************/
/*******************************************************/

.main-menu {
	z-index: 2;
	width: 100%;
	position: fixed;
	background: $black;
	height: 50px;
	
	ul {
		text-align: center;
		margin: 0;
		color: $white;

		li {
			display: inline-block;
			padding-left: 0px;
			margin-left: 1%;
			margin-right: 1%;
			
			a {
				font-family: $condensed_font;
				letter-spacing: 1px;
				font-size: 18pt;
				text-transform: uppercase;
				color: $white;
				text-decoration: none;
				padding: 10px;
				float: left;
			}
		}
	}
}

/*******************************************************/
/*********************** HEADER ************************/
/*******************************************************/

.intro {
	min-height: 900px;
	.intro-content {
		width: 100%;
		
		.top-logo-wrapper{
			padding-top: 50px;
		}
		
		.intro-text-bottom{
			bottom: 20%;
		}
	}
}


/*******************************************************/
/************************* TIP ************************/
/*******************************************************/

.tips {
	background: $yellow;
	
	.tips-text {
		display: none;
	}
	
	.tip-teaser {
		display: inline-block;
		height: 400px;
		width: calc(100% / 3);
		color: $white;
		overflow: hidden;
		margin-bottom: -.2em;
		margin-right: -.2em;
		
		&.thumbs {
			height: 200px;
    		width: calc(60% / 3);
    		    		
    		.number-box {
				font-size: 17pt;
				width: 30px;
				height: 30px;
				margin-top: 1px;
    		}
    		
    		.text-box {
				top: 25%;
				left: 25%;
				width: 100%;
				height: 50px;
			
				.play {
				    border-top: 15px solid transparent;
				    border-left: 25px solid $white;
				    border-bottom: 15px solid transparent;
				}
				
				.tips-box-text {
					font-size: 15pt;
					margin-left: 20px;
					margin-top: 3px;
				}	
			}
		}
		
		&:hover {
			background: $yellow;
			
			.text-box {
				display: block;
				text-transform: uppercase;
			}
		}
		
		.number-box {
			position: relative;
			top: 0%;
			text-align: center;
			font-size: 27pt;
			background: $yellow;
			width: 50px;
			height: 50px;
		}
		
		.text-box {
			display: none;
			position: relative;
			text-align: center;
			top: 25%;
			left: 25%;
			width: 100%;
			height: 50px;
			
			.play {
				background: $yellow;
				float: left;
			    border-top: 25px solid transparent;
			    border-left: 35px solid $white;
			    border-bottom: 25px solid transparent;
			}
			
			.tips-box-text {
				float: left;
				font-size: 20pt;
				text-align: center;
				margin-left: 25px;
				margin-top: 10px;
			}	
		}
	}
	
	.tip-content {
		background: $black;
		display: none;
		
		&.open{
			display inline-block
			position: relative;
			margin-top: -200px;
    		z-index: 0;
		}
		
		.youtube-content {
			text-align: center;
			background: $white;
			height: 50vh;
		}
		
		.tip1-content {
			float: left;
			width: 50%;
			padding: 1em;
			color: $white;
			
			.tip-howto {

			}
			
			.movie-tips {
				padding-bottom: 2em;

				h2 {
					font-size: 12pt;
					text-transform: uppercase;
					border-bottom 2px solid $black;
					line-height: 40px;
				}
				
				.movie-posters {
					outline: 1px solid $white;
					height: 180px;
				}
			}
		}
		
		.share-tip {
			float: right;
			padding-top: 2em;
			
			h2 {
				color: $white;
				font-size: 12pt;
				text-transform: uppercase;
			}
			
			input {
				border: none;
				border-radius: 2px;
				height: 28px;
				width: 140px;
			}
			
			input::-webkit-input-placeholder { /* WebKit browsers */
					padding-left: 0.5em;
			}
			
			.socialmedia-icons {
				float: right;
				margin-top: -5px;
				
				img {
					width: 35px;
					height: 35px;
					padding: 3px 5px 3px 3px;
				}
			}
		}
		
		.next-tip {
			text-transform: uppercase;
			font-weight: bold;
			color: $white;
			margin-top: 250px;
			border-bottom: 2px solid $yellow;
    		width: 170px;
    		
    		a {
    			text-decoration: none;
    		}
			
			.next-tip-text {
				color: $white;
				margin-bottom: 10px;
			}
			
			.play {
				background: $black;
				float: left;
			    border-top: 15px solid transparent;
			    border-left: 25px solid $yellow;
			    border-bottom: 15px solid transparent;
			}
			
			.next-tip-teaser {
				color: $yellow;
				margin-top: -10px;
			    margin-left: 30px;
			    font-size: 30pt;
			}
		}
	}
}

/*******************************************************/
/********************** INSTAGRAM **********************/
/*******************************************************/

.instagram-feed {    
    .top-content {        
        .about-info {
            display: block;
            padding: 5%;
            
            .about-text {
                margin: 0 auto;
                width: 50%;
            }
        }
        
        .hashtag-box {
            display: block;
           text-align: center;
            
            .hashtag-info {
                width: 100%;
                padding-top: 1em;
                padding-bottom: 1em;
            }
        }
        
        .instagram-box {
            width: 100%;
            
            .all-images {
                #instafeed {
                    a {
                        width: 12.5%;
                        
                        img {
                            width: 100%;
                            height: auto;
                        }
                    }
                }
        
                .more-images {
                    height: 100%;
                    width: 12.5%;
                }
            }
        }
    }
    
    &:after {
        clear: both;
        content: '';
        display: table;
    }
}

/*******************************************************/
/************************ DATES ************************/
/*******************************************************/

.dates-content {
	margin: 0 auto;
	width: 80%;
	
	a {
		text-decoration: none;
		color: $black;
	}
	
	.info-text {
		display: block;
		margin-left: auto;
		margin-right: auto;
		width: 60%;
		font-size: 20pt;
		padding: 10%;
		text-transform: uppercase;
		line-height: 35px;
	}
	
	.link-text {
		display: block;
		margin-left: auto;
		margin-right: auto;
		width: 60%;
		font-size: 20pt;
		padding: 10%;
		text-transform: uppercase;
		line-height: 35px;
	}

}


