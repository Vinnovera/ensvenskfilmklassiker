/*******************************************************/
/************************ MENU *************************/
/*******************************************************/

.main-menu {
	display: none;
}

/*******************************************************/
/*********************** HEADER ************************/
/*******************************************************/

.intro {
	background: url("../images/intro-background.jpg") no-repeat 50%;
	background-size: cover;
	height: 80vh;
	padding-top: 1em;
	
	.intro-content {
		width: 100%;
		position: relative;
		height: 100%;

		.top-logo {
			width: 30%;
			display: block;
			margin-left: auto;
			margin-right: auto;
		}
		
		.mid-logo {
			padding: 2%;
			display: block;
			margin-left: auto;
			margin-right: auto;
			left: 0;
			right: 0;
		}
		
		.intro-text {
			padding: 18% 11% 0% 11%;
			text-align: center;
			width: 70%;
			margin-left: auto;
			margin-right: auto;
			color: $yellow;
			font-style:italic;
			font-weight: bold;
		}
	
		.intro-text-bottom {
			padding: 2%;
			text-align: center;
			width: 70%;
			margin-left: auto;
			margin-right: auto;
			color: $yellow;
			font-style:italic;
			font-weight: bold;
			
		}
	
		button {
			display: none;
		}
	}
}

/*******************************************************/
/*********************** WELCOME ***********************/
/*******************************************************/

.welcome {
	background: $black;

	.top-content {
		text-transform: uppercase;
		background: $red;
		font-size: 10pt;
		font-weight: bold;
	}
	
	.ready-text {
		text-align: center;
		padding-top: 1em;
		padding-bottom: 1em;
	}

	.welcome-content {
		color: $white;
		
		h2 {
			color: $turquoise;
			padding: 5%;
			margin: 0;
		}
		
		p {
			padding: 5% 5%;
		}
		
		.arrow-down {
			display: none;
		}
	}
}

/*******************************************************/
/************************* TIPS ************************/
/*******************************************************/

.tips {
	background: $red;
	
	.tips-text {
		color: $white;
		padding: 20px;
		font-size: 30pt;
		font-family: "Verlag A", "Verlag B";
	}
	
	.tips-content {
		background: url("../images/tempimg.jpg") no-repeat center;
		background-size: cover;
		display: inline-block;
		margin: 5%;
		height: 200px;
		width: 90%;
		color: $white;
		
		.number-box {
			display: block;
			position: relative;
			top: 60%;
			margin-left: -19px;
			text-align: center;
			font-size: 20pt;
			font-family: "Verlag A", "Verlag B";
			background: $black;
			width: 35px;
			height: 35px;
		}
		
		.text-box {
			position: relative;
			float: left;
			margin-left: 50px;
			top: 43.2%;
			width: 140px;
			font-size: 15pt;
			height: 35px;
			background: $red;
			color: $white;
			
			.play {
				margin: 8px;
				background: $red;
				float: left;
			    border-top: 10px solid transparent;
			    border-left: 15px solid $white;
			    border-bottom: 10px solid transparent;
			}
			
			p {
				float: left;
				text-align: center;
				margin-top: 5px;

			}
		}
	}
}

/*******************************************************/
/********************** INSTAGRAM **********************/
/*******************************************************/

.instagram-feed {
	background: $black;
	
	.top-content {
		
		.hashtag-info {
			text-transform: uppercase;
			padding-top: 1em;
			padding-bottom: 1em;
			color: $red;
			text-align: center;
		}
		
		.image-feed {
			background: $white;
			height: 40vh;
		}
		
		.about-text {
			color: $white;
			margin: 0 auto;
			line-height: 20px;
			padding: 5%;
		}
	}
}

/*******************************************************/
/************************ DATES ************************/
/*******************************************************/

.dates-content {
	background: $yellow;
	
	a {
		text-decoration: none;
		color: $black;
	}
	
	p {
		font-size: 20pt;
		padding: 10%;
		text-transform: uppercase;
		line-height: 35px;
	}

}



/*******************************************************/
/*********************** FOOTER ************************/
/*******************************************************/

.footer-content {
	background: $red;
	height: 80vh;
	
	
	h2 {
		padding-top: 2em;
		text-align: center;
		margin: 0 auto;
		color: $white;
	}
	
	.logo-smicker {
		display: block;
		margin-top: 3em;
		width: 80%;
		margin-left: auto;
		margin-right: auto;
	}
	
	.logo-vinnovera {
		display: block;
		margin-top: 3em;
		width: 80%;
		margin-left: auto;
		margin-right: auto;
	}
}