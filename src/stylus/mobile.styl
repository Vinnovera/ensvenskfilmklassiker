/*******************************************************/
/*********************** HEADER ************************/
/*******************************************************/

.intro {
	background: url("../images/intro-background.jpg") no-repeat center;
	background-size: cover;
	height: 90vh;
	padding-top: 1em;
	
	.intro-text {
		position: absolute;
		top: 20%;
		width: 60%;
		left: 20%
		
		p {
			margin: 0;
			font-size: 14pt;
			text-align: center;
			font-family: "Verlag A", "Verlag B";
			text-transform: uppercase;
		}
	}
	
	.top-logo {
		position: absolute;
		top: 2%;
		left: 35%;
		width: 30%;
	}
	
	.mid-logo {
		position: absolute;
		top: 45%;
		left: 10%;
		width: 80%;
	}
}

/*******************************************************/
/*********************** WELCOME ***********************/
/*******************************************************/

.welcome {
	background: $black;

	
	.top-content {
		text-transform: uppercase;
		background: $red;
		font-size: 10pt;
		font-weight: bold;
	}
	
	.ready-text {
		text-align: center;
		padding-top: 1em;
		padding-bottom: 1em;
	}

	.welcome-content {
		color: $white;
		
		h2 {
			color: $turquoise;
			padding: 5%;
			margin: 0;
		}
		
		p {
			padding: 5% 5%;
		}
	}
}

/*******************************************************/
/************************* TIPS ************************/
/*******************************************************/

.tips {
	background: $red;
	
	.tips-text {
		color: $white;
		padding: 20px;
		font-size: 30pt;
		font-family: "Verlag A", "Verlag B";
	}
	
	.tips-content {
		background: url("../images/tempimg.jpg") no-repeat center;
		background-size: cover;
		display: inline-block;
		margin: 5%;
		height: 200px;
		width: 90%;
		color: $white;
		
		.number-box {
			position: relative;
			top: 60%;
			margin-left: -15px;
			text-align: center;
			font-size: 20pt;
			font-family: "Verlag A", "Verlag B";
			background: $black;
			width: 35px;
			height: 35px;
		}
		
		.text-box {
			position: relative;
			float: right;
			margin-right: 98px;
			top: 42.2%;
			width: 140px;
			font-size: 15pt;
			height: 35px;
			background: $red;
			color: $white;
		}
	}
}

/*******************************************************/
/********************** INSTAGRAM **********************/
/*******************************************************/

.instagram-feed {
	background: $black;
	
	.top-content {
		
		.hashtag-info {
			text-transform: uppercase;
			padding-top: 1em;
			padding-bottom: 1em;
			color: $red;
			text-align: center;
		}
		
		.image-feed {
			background: $white;
			height: 20vh;
		}
		
		.about-text {
			color: $white;
			margin: 0 auto;
			line-height: 20px;
			padding: 5%;
		}
	}
}

/*******************************************************/
/************************ DATES ************************/
/*******************************************************/

.dates-content {
	background: $yellow;
	
	a {
		text-decoration: none;
		color: $black;
	}
	
	p {
		font-size: 20pt;
		padding: 10%;
		text-transform: uppercase;
		line-height: 35px;
	}

}



/*******************************************************/
/*********************** FOOTER ************************/
/*******************************************************/

.footer-content {
	background: $red;
	height: 70vh;
	
	h2 {
		padding-top: 2em;
		text-align: center;
		margin: 0 auto;
		color: $white;
	}
	
	.logo-vinnovera {
		position: absolute;
		margin-top: 3em;
		width: 80%;
		left: 10%;
	}
}